<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ogrebeauty.controller.servicesController.ServicesController"
            prefHeight="1080.0" prefWidth="1920.0">
    <Button mnemonicParsing="false" text="Клиенты" onAction="#redirectToClientPage"/>
    <Button mnemonicParsing="false" text="Записи" onAction="#redirectToServicesPage" />
    <Button mnemonicParsing="false" text="Сотрудники" onAction="#redirectToEmployeesPage" />
    <Button mnemonicParsing="false" text="Услуги" onAction="#redirectToServicePage"/>
    <TableView fx:id="servicesTable">
        <columns>
            <TableColumn fx:id="serviceTypeColumn" prefWidth="275.0" text="Услуга"/>
            <TableColumn fx:id="priceColumn" prefWidth="175.0" text="Цена"/>
            <TableColumn fx:id="editButton" prefWidth="75.0" text="Изменение" />
            <TableColumn fx:id="deleteButton" prefWidth="75.0" text="Удаление" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <Button fx:id="addNewServices" layoutX="37.0" layoutY="677.0" text="+" />
</AnchorPane>
